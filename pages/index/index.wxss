.popupmenu_item{
  font-size: 60rpx;
  font-weight: 800;
  text-align: center;
}
.popupmenu::after{
  position: absolute;
  top:98%;
  left:26%;
  content: '';
  width: 0px;
  height: 0px;
  border-left:20rpx solid transparent;
  border-right:20rpx solid transparent;
  border-top:20rpx #fff solid;
}

.popupmenu::before{
  position: absolute;
  top:100%;
  left:24%;
  content: '';
  width: 0px;
  height: 0px;
  border-left:22rpx solid transparent;
  border-right:22rpx solid transparent;
  border-top:22rpx grey solid;
}
.popupmenu{
  position: absolute;
  bottom:470rpx;
