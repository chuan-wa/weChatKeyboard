page {
  background: #f3f7f7;
  height: 100%;
}

.page_box {
  width: 100%;
  height: 100%;
  background: #f3f7f7;
  overflow: hidden;
}

.input_view {
  width: 700rpx;
  height: 500rpx;
  background: #fff;
  margin: 25rpx auto;
  border-radius: 10rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.title {
  display: block;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #aaa;
}

.input_box {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  height: 90rpx;
  border-bottom: 1px solid #efefef;
}

.input_label {
  font-size: 35rpx;
  font-weight: bold;
  margin-right: 5rpx;
}

.content {
  display: flex;
  font-size: 80rpx;
  line-height: 90rpx;
  font-weight: 700;
}

.number-block {
  position: relative;
}

.cursor-insert {
  position: absolute;
  top: 0rpx;
  right: -1rpx;
}

.cursor {
  width: 2rpx;
  height: 90rpx;
  background: #666;
  border-radius: 6rpx;
  animation: twinkling 0.9s infinite;
}

@-webkit-keyframes twinkling {
  0% {
    background: #fff;
  }

  100% {
    background: #666;
  }
}

.default-content {
  color: #999;
  font-size: 38rpx;
  font-weight: 600;
}


/* 键盘 */
.keyboard {
  background-color: #ebebeb;
  height: 450;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  transition: height 0.25s;
  display: flex;
  justify-content: flex-start;
  padding-bottom: 6%;
}

.hind_box {
  height: 450rpx;
}

.key_box {
  overflow: hidden;
}

.backscape {
  height: 50%;
  justify-content: center;
  display: flex;
  align-items: center;
  background-image: linear-gradient(to right, #fff 0%, #f5f5f5 100%);
  border-left: 2rpx solid #ccc;
  border-top: 2rpx solid #ccc;
}

.complete {
  height: 50%;
  justify-content: center;
  display: flex;
  align-items: center;
  background-color: #f0e1c0;
  border-left: 2rpx solid #ccc;
  border-top: 2rpx solid #ccc;

}

.left {
  width: 75%;
  justify-content: space-between;
}

.right {
  width: 25%;
}
.functionButton{
  background-image: linear-gradient(to right,#ccc 0%,#ccc 100%);
  box-sizing: border-box;
  float: left;
  width: 90rpx;
  height: 78rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
  border-radius: 10%;
  font-size: 20rpx;
}
.row.functionButton:nth-child(1){
  margin-right: 20rpx;
}
.functionButton:nth-child(2){
  margin-left: 20rpx;
}
.functionButtonLarger{
  box-sizing: border-box;
  width:110rpx;
  height:78rpx;
  margin-right:2rpx;
  text-align: center;
  border-bottom: 2rpx solid #ccc;
  border-radius: 10%;
  font-size: 30rpx;
  background-image: linear-gradient(to right, #fff 0%, #f5f5f5 100%);
  display:flex;
  justify-content: center;
  align-items: center;
}
.functionButtonBlankSpace{
  box-sizing: border-box;
  width:300rpx;
  height:78rpx;
  text-align: center;
  margin-right: 2rpx;
  border-bottom: 2rpx solid #ccc;
  border-radius: 5%;
  font-size: 30rpx;
  background-image: linear-gradient(to right, #fff 0%, #fff 100%);
  display:flex;
  justify-content: center;
  align-items: center;
  
}
.functionButtonComplete{
  box-sizing: border-box;
  width:172rpx;
  height:78rpx;
  text-align: center;
  border-bottom: 2rpx solid #ccc;
  border-radius: 10%;
  font-size: 30rpx;
  background-image: linear-gradient(to right, #cca663 0%, #cca663 100%);
  display:flex;
  justify-content: center;
  align-items: center;



}
.row{
  height:25%;
  width:100%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  flex-direction:row;
  margin:2rpx;
  margin-right: 10rpx;
}
.wordsRow {
  height: 100%;
  width: 85%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  padding-right: 14rpx;
}

.wordsRow:nth-child(1) {
  width: 100%;
}
/* .wordsRow:nth-child(3){
  width: 70%;
} */

.row:nth-child(2) {
  width: 90%;
}
.row:nth-child(3){
  justify-content: space-between;
}
.row:nth-child(4){
  justify-content: space-between;
}


.keys {
  background-image: linear-gradient(to right, #fff 0%, #f5f5f5 100%);
  box-sizing: border-box;
  float: left;
  width: 33.3333333%;
  height: 25%;
  text-align: center;
  line-height: 105rpx;
  border-left: 2rpx solid #ccc;
  border-top: 2rpx solid #ccc;
  font-size: 50rpx;
}

.keyboardWords {
  background-color: #ebebeb;
  height: 380rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  transition: height 0.25s;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-left: 6rpx;
  padding-bottom: 10%;
  
}

.wordKeys {
  background-image: linear-gradient(to right, #fff 0%, #f5f5f5 100%);
  box-sizing:border-box;
  float: left;
  width: 63rpx;
  height: 78rpx;
  text-align: center;
  border-bottom: 2rpx solid #ccc;
  border-radius: 20%;
  font-size: 50rpx;
  font-weight: normal;
  padding: 2rpx;
  margin: 6rpx;
}

.keys:active {
  background-image: linear-gradient(to right, #bdbdbd 0%, #bdbdbd 100%)
}

.wordKeys:active {
  background-image: linear-gradient(to right, #bdbdbd 0%, #bdbdbd 100%);
  
}

.backscape:active {
  background-image: linear-gradient(to right, #bdbdbd 0%, #bdbdbd 100%)
}

.complete:active {
  background-image: linear-gradient(to right, #cca663 0%, #cca663 100%)
}

.functionButton:active{
  background-image: linear-gradient(to right, #5a5858 0%, #4b4a4a 100%);
}
.functionButtonLarger:active{
  background-image: linear-gradient(to right, #bdbdbd 0%, #bdbdbd 100%);
}
.functionButtonBlankSpace:active{
  background-image: linear-gradient(to right, #bdbdbd 0%, #bdbdbd 100%);
}
.abcFont:active{
  background-image: linear-gradient(to right, #bdbdbd 0%, #bdbdbd 100%);
}

.border0 {
  border-left: 0;
}

.completeButtonColorTrans {
  background-image: linear-gradient(to right, #cca663 0%, #cca663 100%)
}

.abcFont {
  font-size: 30rpx;
}

.bg_color {
  background: #ccc;
}
